@{
    ViewData["Title"] = "Park";
    Message mm = new Message();
    string main_user = ViewData["user_id"].ToString();
    string userName = ViewData["account_name"].ToString();
    List<Message> message_list = (List<Message>)ViewData["message_list"];
}
    <script>
    (function () {
        /*var Message;
        Message = function (arg) {
